{
  "name": "docs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "generate:directus:types": "envCli npx --yes directus-typescript-gen  --host ${NEXT_PUBLIC_API_URL} --email ${API_ADMIN_EMAIL} --password ${API_ADMIN_PASSWORD} --typeName ApiCollections --outFile src/types/api-collection.d.ts",
    "generate:directus:types:schedule": "scheduleCli \"*/30 * * * *\" \"npm run generate:directus:types\"",
    "dev": "npm run openapi && envCli wait-port ${NEXT_PUBLIC_API_PING_URL} && concurrently --kill-others-on-fail -n next,type,routing -c green,blue,magenta   \"next dev --turbo --port 3001\" \"npm run generate:directus:types:schedule\" \"npm run dr:build:watch\"",
    "build": "npm run dr:build && npm run openapi && envCli wait-port ${NEXT_PUBLIC_API_PING_URL} && npm run generate:directus:types && next build",
    "start": "envCli wait-port ${NEXT_PUBLIC_API_PING_URL} && npm run generate:directus:types && next star --port 3001",
    "start:local": "envCli wait-port ${NEXT_PUBLIC_API_PING_URL} && npm run generate:directus:types && next start --port 3001",
    "lint": "next lint",
    "test": "echo 'all app:docs tests passed!'",
    "clean": "delete .next",
    "dr:build": "npx --yes declarative-routing build",
    "dr:build:watch": "npx --yes declarative-routing build --watch",
    "openapi": "npm run openapi:yaml && npm run openapi:html",
    "openapi:yaml": "ts-node ./src/routes/openapi.ts",
    "openapi:html": "npx --yes @redocly/cli build-docs openapi-docs.yml"
  },
  "dependencies": {
    "@directus/sdk": "^16.1.0",
    "@repo/bin": "*",
    "@repo/ui": "*",
    "@tanstack/react-query": "^5.40.1",
    "@tanstack/react-query-devtools": "^5.40.1",
    "concurrently": "^8.2.2",
    "lucide-react": "^0.292.0",
    "next": "^14.0.2",
    "qs": "^6.12.1",
    "query-string": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.69.5",
    "wait-port": "^1.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.1.1",
    "@next/eslint-plugin-next": "^14.0.2",
    "@redocly/cli": "^1.17.0",
    "@repo/eslint-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/tsconfig": "*",
    "@tanstack/eslint-plugin-query": "^5.43.1",
    "@types/node": "^20.9.0",
    "@types/qs": "^6.9.15",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "delete-cli": "^0.1.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "yaml": "^2.4.5"
  }
}
